<nav class="uk-navbar uk-margin-large-bottom">
  <%= link_to 'Product Search', products_path, class: 'uk-navbar-brand' %>
  <ul class="uk-navbar-nav">
    <li><%= link_to @product.name, product_path(id: @product.name) %></li>
  </ul>
</nav>
<div class="uk-vertical-align uk-text-center">
  <div class="uk-vertical-align-middle">
    <table class="uk-panel uk-panel-box">
      <th>Model</th>
      <th>Price</th>
      <% @results.each do |result| %>
        <tr>
          <td><%= result['model'] %></td>
          <td><%= result['price'] %> <%= result['price_currency']%></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
